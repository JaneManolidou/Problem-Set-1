   "source": [
    "import numpy as np\n",
    "def numberN(a,b,error):\n",
    "    er0 = abs(b-a)/2\n",
    "    N = (np.log(er0)-np.log(error))/np.log(2)\n",
    "    print(\"For error smaller than\", error, \"N is: \", round(N))\n",
    "   "
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 2,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "For error smaller than 0.001 N is:  8.0\n",
      "For error smaller than 1e-06 N is:  18.0\n",
      "For error smaller than 1e-12 N is:  38.0\n"
     ]
    }
   ],
   "source": [
    "a = 0.5\n",
    "b=1\n",
    "numberN(a,b,10**(-3))\n",
